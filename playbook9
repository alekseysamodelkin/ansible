---
- name: install nginx
  hosts: web
  become: yes

  tasks:
    name: Ensure nginx is present
    apt:
      name: nginx
      state: latest

    name: Change html

    patch:
      src: /tmp/index.html.patch
      dest: /var/www/index.html

    name: Ensure nginx is restarted
    service:
      name: nginx
      state: restarted